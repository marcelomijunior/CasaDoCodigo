@{
    string nomeUsuario = "";
}

@*
    1) usuário logado: boas vindas e opção de sair.
    2) usuário desconectado: opção de entrada.
*@

@if (!string.IsNullOrWhiteSpace(nomeUsuario))
{
    <form id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a title="Manage">Olá, @nomeUsuario!</a>
            </li>
            <li>
                <button class="btn btn-link navbar-btn navbar-link">Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a>Cadastre-se</a></li>
        <li><a>Entrar</a></li>
    </ul>
}