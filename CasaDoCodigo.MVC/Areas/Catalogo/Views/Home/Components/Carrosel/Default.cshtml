@addTagHelper *, CasaDoCodigo.MVC
@using CasaDoCodigo.MVC.Areas.Catalogo.Models.ViewModels
@model CarroselViewModel

<div class="item @(Model.Indice == 0 ? "active" : "")">
    <div class="row">
        @foreach (var produto in Model.Produtos)
        {
            <vc:card-produto produto="@produto" />
        }
    </div>
</div>

